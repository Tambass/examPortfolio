<%- include('../partials/admin_partials/admin_header.ejs') -%>

<%- include('../partials/admin_partials/admin-sidebar.ejs') -%>

<div class="main">

    <section class="title">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>SKILLS</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="skills">

        <div class="container">
            <a href="/admin/skills/add">
                <i class="fas fa-plus-circle" style="color: green;"></i>
                Add skill
            </a>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Status</th>
                            <th scope="col">Skill Name</th>
                            <th scope="col">Logo</th>
                            <th scope="col">Category</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% skill.forEach(function(skill){ %>
                        <tr>
                            <th scope="row">
                                <% if(skill.status>0) {%>
                                    <i class="fas fa-circle" style="color: green;"></i>
                                <%} else {%>
                                    <i class="fas fa-circle" style="color: red;"></i>
                                <% } %>
                            </th>
                            <td><%= skill.name %></td>
                            <td><%= skill.image %></td>
                            <td><%= skill.category %></td>
                            <td>
                                <a href="/admin/skills/edit">
                                    <i class="fas fa-edit"></i>                                
                                </a>
                            </td>
                            <td>
                                <i class="fas fa-trash" style="color: red;"></i>
                            </td>
                        </tr>
                        <% }) %>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </section>

</div>

<%- include('../partials/admin_partials/admin_footer.ejs') -%>