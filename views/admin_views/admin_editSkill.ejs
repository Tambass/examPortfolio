<%- include('../partials/admin_partials/admin_header.ejs') -%>

<%- include('../partials/admin_partials/admin-sidebar.ejs') -%>

<div class="main">

    <section class="title">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>EDIT SKILL</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="formulaire">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <form>
                        <div class="form-group">
                          <label for="skillName">Nom de la compétence</label>
                          <input type="text" class="form-control" id="skillName" name="skillName" value="< %= % >">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="category">Catégorie</label>
                                <select class="custom-select mr-sm-2" name="category" id="category">
                                    <option selected  value="< %= % >"> < %= % > </option>
                                    <option value="1">Front-End</option>
                                    <option value="2">Bac-End</option>
                                    <option value="3">Database</option>
                                    <option value="4">DevOps</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <input type="file" class="form-control-file" name="image" value="< %= % >">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                        <a href="/admin/skills">
                            <button type="button" class="btn btn-secondary">Annuler</button>
                        </a>
                    </form>

                </div>
            </div>
        </div>
    </section>
    
</div>

<%- include('../partials/admin_partials/admin_footer.ejs') -%>