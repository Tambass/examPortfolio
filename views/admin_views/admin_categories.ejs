<%- include('../partials/admin_partials/admin_header.ejs') -%>

<%- include('../partials/admin_partials/admin-sidebar.ejs') -%>

<div class="main">

    <section class="title">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>CATEGORIES</h1>
                </div>
            </div>
        </div>
    </section>

    <div class="container categories">
        <div class="row">
            <div class="col-md-6 projects-categories">

                <div class="category-title">Project Categories</div>

                <div class="container">
                    <a href="/admin/categories/add_project_category">
                        <i class="fas fa-plus-circle" style="color: green;"></i>
                        Add project category
                    </a>
                </div>

                <div class="category-table">

                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Status</th>
                            <th scope="col">Name</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% projectCategory.forEach(function(projectCategory){ %>
                            <tr>
                                <th scope="row">
                                    <form method="post" action="/admin/categories/status_project_category/<%= projectCategory.id %>?_method=PUT">
                                        <% if(projectCategory.status>0) {%>
                                            <button type="submit" class="btn">
                                                <i class="fas fa-circle" style="color: green;"></i>
                                            </button>
                                        <%} else {%>
                                            <button type="submit" class="btn">
                                                <i class="fas fa-circle" style="color: red;"></i>
                                            </button>
                                        <% } %>
                                    </form>
                                </th>
                                <td><%= projectCategory.name %></td>
                                <td>
                                    <a href="/admin/categories/edit_project_category/<%= projectCategory.id %>">
                                        <i class="fas fa-edit"></i>                                
                                    </a>
                                </td>
                                <td>
                                    <form method="POST" action="/admin/categories/delete_project_category/<%= projectCategory.id %>?_method=DELETE">
                                        <button type="submit" class="btn">
                                            <i class="fas fa-trash" style="color: red;"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>

                </div>

            </div>

            <div class="col-md-6 skills-categories">

                <div class="category-title">Skills Categories</div>

                <div class="container">
                    <a href="/admin/categories/add_skill_category">
                        <i class="fas fa-plus-circle" style="color: green;"></i>
                        Add skill category
                    </a>
                </div>

                <div class="category-table">

                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Status</th>
                            <th scope="col">Name</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% skillCategory.forEach(function(skillCategory){ %>
                            <tr>
                                <th scope="row">
                                    <form method="post" action="/admin/categories/status_skill_category/<%= skillCategory.id %>?_method=PUT">
                                        <% if(skillCategory.status>0) {%>
                                            <button type="submit" class="btn">
                                                <i class="fas fa-circle" style="color: green;"></i>
                                            </button>
                                        <%} else {%>
                                            <button type="submit" class="btn">
                                                <i class="fas fa-circle" style="color: red;"></i>
                                            </button>
                                        <% } %>
                                    </form>
                                </th>
                                <td><%= skillCategory.name %></td>
                                <td>
                                    <a href="/admin/categories/edit_skill_category/<%= skillCategory.id %>">
                                        <i class="fas fa-edit"></i>                                
                                    </a>
                                </td>
                                <td>
                                    <form method="POST" action="/admin/categories/delete_skill_category/<%= skillCategory.id %>?_method=DELETE">
                                        <button type="submit" class="btn">
                                            <i class="fas fa-trash" style="color: red;"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>

                </div>

            </div>
        </div>

    </div>

</div>

<%- include('../partials/admin_partials/admin_footer.ejs') -%>